# OpenAI API 配置
# 必需：OpenAI API Key
OPENAI_API_KEY=your_api_key_here

# 可选：OpenAI API Base URL（如使用代理或第三方服务）
OPENAI_API_BASE=https://api.openai.com/v1

# 可选：使用的模型（默认：gpt-4）
# OPENAI_MODEL=gpt-4
# OPENAI_MODEL=gpt-3.5-turbo

# 可选：是否启用 thinking 模式（默认：false）
# 某些 API 提供商（如硅基流动、DeepSeek）需要显式设置为 false
# OPENAI_ENABLE_THINKING=false

# 数据库配置
# PostgreSQL 连接字符串（使用 asyncpg 驱动）
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/selgetabel
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
# jg/nNe9pt#sbggN
# JWT 配置
# 使用 openssl rand -hex 32 生成安全的密钥
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码加密
BCRYPT_ROUNDS=12

# 调试模式
DEBUG=false
